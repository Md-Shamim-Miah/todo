
<h3 class="mt-5 text-center"> Student Details</h3>

<table class="table table-hover table-striped">
   <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">ID</th>
      <th scope="col" class="text-center">Name</th>
      <th scope="col" class="text-center">Roll</th>
      <th scope="col" class="text-center">Email</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#texttodisplay}}
     <tr>
          <td class="text-center">{{id}}</td>
          <td class="text-center">{{name}}</td>
          <td class="text-center">{{roll}}</td>
          <td class="text-center">{{email}}</td>
          <td class="text-center">
              <a href="{{editurl}}/?id={{id}}" class="btn btn-info">Edit </a>
              <a href="{{deleteurl}}/?id={{id}}" class="btn btn-danger">Delete </a>
          </td>
     </tr>
    {{/texttodisplay}}
  </tbody>
</table>

<div class="text-center mt-5 pt-5">
    <a href="{{createurl}}" class="btn btn-primary">Create Entry </a>
</div>
